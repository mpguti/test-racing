{{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show">
        {{success_msg}}
    </div>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    </button>
{{/if}}

{{#if error_msg}}
    <div class="alert alert-failed alert-dismissible fade show">
        {{error_msg}}
    </div>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    </button>
{{/if}}