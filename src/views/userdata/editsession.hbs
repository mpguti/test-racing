<form class="container" action="/user/mysessions/edit/{{session._id}}" method="post">
  <div>
    <label for="alias">Vehiculo</label>
    <select name="alias" placeholder="Selecciona uno..." id="alias" value={{session.alias}}>
      {{#each vehicles}}
        <option>{{alias}}</option>
      {{/each }}
    </select>
  </div>
  <div>
    <label for="circuito">Circuito</label>
    <input type="text" name="circuito" placeholder="circuito" id="circuit" value={{session.circuito}} />
  </div>
  <div>
    <label for="fecha">Fecha</label>
    <input type="date" name="fecha" placeholder="fecha" id="date" value={{session.fecha}}/>
  </div>
  <div>
    <label for="mejorvuelta">Mejor vuelta</label>
    <input
      type="text"
      name="mejorvuelta"
      pattern="^[0-2]:([0-5]\d).(\d+)"
      placeholder="1:00.000"
      id="bestlap"
      value={{session.mejorvuelta}}
    />
  </div>
  <div>
    <label for="condicion">Condicion</label>
    <select name="condicion" value={{session.condicion}}>
      <option value="Seco" selected>Seco</option>
      <option value="Semiseco">Semiseco</option>
      <option value="Mojado">Mojado</option>
    </select>
  </div>
  <div>
    <label for="idowner">OwnerId</label>
    <input type="text" name="idowner"  id="owner" value="{{session.idowner}}" readonly>
    </div> 

  <button type="submit">Modificar</button>
</form>

<hr>

